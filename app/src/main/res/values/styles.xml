<resources>
    <!-- Base application theme. -->
    <style name="ApplicantTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/applicantPrimary</item>
        <item name="colorPrimaryDark">@color/applicantPrimaryDark</item>
        <item name="colorAccent">@color/applicantAccent</item>
        <item name="android:colorBackground"> @color/applicantPrimary</item>
        <item name="android:background"> @color/applicantPrimary </item>
        <item name="android:button"> @color/applicantPrimary </item>
    </style>

    <style name="EmployerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/employerPrimary</item>
        <item name="colorPrimaryDark">@color/employerPrimaryDark</item>
        <item name="colorAccent">@color/employerAccent</item>
        <item name="android:colorBackground"> @color/employerPrimary</item>

    </style>

    <style name="ApplicantTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>